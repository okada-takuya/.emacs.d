;; 末尾の半角スペースとタブを表示(defface my-face-u-1 '((t (:foreground "SteelBlue" :underline t))) nil)(defvar my-face-u-1 'my-face-u-1)(defadvice font-lock-mode (before my-font-lock-mode ())(font-lock-add-keywords major-mode '(("[ \t]+$" 0 my-face-u-1 append))))(ad-enable-advice 'font-lock-mode 'before 'my-font-lock-mode)(ad-activate 'font-lock-mode)(add-hook 'find-file-hooks '(lambda () (if font-lock-mode nil (font-lock-mode t))) t)